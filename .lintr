linters: linters_with_tags(
    tags = c( "best_practices", "common_mistakes", "package_development", "pkg_testthat","configurable", "correctness", "readability",  "robustness", "style"),
    indentation_linter = NULL
  )
exclusions: list(
    "vignettes/",
    "tests/testthat" = list(
      extraction_operator_linter = Inf,
      line_length_linter = Inf
    ),
    "R/zzz.R" = list(
      undesirable_operator_linter = Inf
    ),
    "R/metaflow_config.R" = list(
      extraction_operator_linter = Inf,
      line_length_linter = Inf,
      undesirable_function_linter = Inf,
      keyword_quote_linter = Inf
    )
  )
